= form_for @opinion do |f|
  .form-group
    = label_tag :issue_title
    = text_field_tag :issue_title, @opinion.issue.try(:title), class: 'form-control typeahead', placeholder: '이슈 제목', data: { 'provider': 'typeahead', 'typeahead-url': issues_path, 'typeahead-display-field': 'title' }
  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :body
    = f.text_area :body, class: 'form-control'
  = f.submit '저장', class: 'btn btn-primary'
  - if @opinion.new_record?
    - if @opinion.issue.present?
      - back_to = issue_home_path(@opinion.issue)
    - else
      - back_to = root_path
  - else
    - back_to = @opinion
  = link_to back_to, class: 'btn btn-default btn-xs' do
    취소
