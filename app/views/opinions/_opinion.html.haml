.post.opinion.col-md-4.col-sm-6[opinion.acting_as]
  .panel.panel-default
    .panel-body.post-bg-opinion-collection
      .post-bg-content
        - if local_assigns[:show_issue]
          = link_to issue_home_path(opinion.issue) do
            %span.label.label-danger
              %i.fa.fa-exclamation
              = opinion.issue.title
        .clearfix
          %blockquote
            %h3= link_to opinion.title, opinion

        %i.fa.fa-pie-chart #{opinion.votes.count}명이 투표했습니다.
        - if user_signed_in? and opinion.voted_by?(current_user) and opinion.votes.any?
          .result-box.text-center
            .row
              .col-xs-6
                %h5 찬성
                %strong{ style: (opinion.agreed_by?(current_user) ? 'font-size:150%;' : 'font-size:100%;'), class: ('text-success' if opinion.agreed_by?(current_user)) }= opinion.votes.with_choice(:agree).count
              .col-xs-6
                %h5 반대
                %strong{ style: (opinion.disagreed_by?(current_user) ? 'font-size:150%;' : 'font-size:100%;'), class: ('text-danger' if opinion.disagreed_by?(current_user)) }= opinion.votes.with_choice(:disagree).count
        .tags(style='margin-top: 1em;')
          - opinion.tags.each do |tag|
            = link_to "##{tag.name}", tag_home_path(tag), class: 'text-nowrap', style: 'color: #999;'
    .panel-footer
      .pull-right
        %span
          %i.fa.fa-comment-o
          = opinion.comments_count
        = render 'likes/like_line', post: opinion.acting_as

      %span= byline opinion.user
