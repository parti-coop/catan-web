!!!
%html{:lang => I18n.locale}
  %head
    %meta{:charset => "utf-8"}
    = stylesheet_link_tag asset_data_base64('application.css')
    %link{href: "http://spoqa.github.io/spoqa-han-sans/css/SpoqaHanSans-kr.css", rel: "stylesheet"}
  %body(style='padding: 0;')
    %section.opinion-socail-card-section{ style: "width: 1200px; height: 630px; background-size: cover; background-image: url(#{asset_data_base64('share_opinion.png')});" }
      .container{ style: 'max-width: 1200px !important; height: 630px; padding: 0; margin: 0; width: 1200px;' }
        %div{ style: 'width: 100%; height: 100%; margin-top: -20px; display: table; text-align: center; position: relative;' }
          %div{ style: 'display: table-cell; vertical-align: middle; padding-top: 20px;'}
            %h1{ style: 'font-size: 600%; color: white; font-family:Spoqa Han Sans;'}= truncate (@opinion.title)
          %p{ style: 'font-size: 300%; color: white; position: absolute; bottom: 135px; left: 100px; font-family:Spoqa Han Sans;'} @#{@opinion.user.nickname}
