%nav.navbar.navbar-default.navbar-fixed-top
  .navbar-brand.navbar-issue
    = link_to issue_home_path(@opinion.issue) do
      %i.fa.fa-hashtag>
      = @opinion.issue.title
  %button(type="button" class="close" data-dismiss="modal" aria-label="Close" style="padding-top: 10px; padding-right: 20px;")
    %span(aria-hidden="true" style="font-size: 130%;") &times;
.container{style: 'width: auto;'}
  %section.post-section.opinion-section
    .text-center
    = render 'posts/post_header', post: @opinion.acting_as, only_buttons: true
    = render 'body'

  %section.post-comments-section
    = render 'comments/comments', postable: @opinion, style: :opinion
