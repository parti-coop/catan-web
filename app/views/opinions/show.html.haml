%section.opinion-section
  .container
    = render 'post_meta', post: @opinion.acting_as

    %h2.opinion__title “#{@opinion.title}”

    .opinion__body.post-bg-opinion-item
      .post-bg-content
        = simple_format @opinion.body, style: 'font-size: 120%'

    .base{ style: 'margin-top: 2em' }
      %sapn.tags
        - @opinion.tags.each do |tag|
          = link_to "##{tag.name}", tag_home_path(tag), style: 'color: initial;'

    = render 'vote'

    .post__likes
      = render 'likes/like', post: @opinion.acting_as
      = render 'likes/like_detail', post: @opinion.acting_as

= render 'comments/comments', postable: @opinion
