- display_count = is_small_screen? ? 4 : 3
- issues = Issue.hottest_not_private_blocked_of_group(group, current_user, display_count)
- all_issues=  Issue.of_group(group).not_private_blocked(current_user)
.group.margin-bottom-default
  - unless group.private_blocked?
    .group-heading
      = link_to smart_group_url(group) do
        %h4
          = group_parties_section_title(group)
          - if issues.count < all_issues.count
            %small.partis-count.badge
              #{Issue.of_group(group).count}개의 빠띠 모두 보기
              %i.fa.fa-angle-double-right
      - unless group.site_description.nil?
        .group-desc
          #{group.site_description}
          - if Issue.of_group(group).any?
            %br.visible-xs-block

    - if issues.any?
      .row
        - issues.each do |issue|
          .col-sm-4.col-xs-6
            .issue-card-wrapper
              = render 'issues/card', issue: issue

