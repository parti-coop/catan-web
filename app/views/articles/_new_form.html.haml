- issue ||= nil
- if user_signed_in?
  #article-form-widget.form-widget-container.bg-line
    = form_for Article.new, html: { class: 'form-widget', novalidate: true, data: {action: 'parti-form-validation', 'submit-form-control': '#article-form-widget form input[type=submit]' } } do |f|
      = hidden_field_tag :back_url, @list_url || request.original_url

      .form-group
        = f.text_field :link, placeholder: 'http://로 시작하는 주소를 입력하세요', class: 'form-control', data: {'rule-required': true}
      .form-group.textarea-box
        = text_area_tag :comment_body, '', placeholder: '이 자료에 대한 의견을 남겨주세요.', class: 'form-control', data: { ride: 'parti-autoresize', 'rule-required': true}
      %hr
      .form-group.clearfix
        .submit-box
          = f.hidden_field :issue_id, value: issue.id
          = f.submit '게시', class: 'btn btn-primary btn-ghost btn-border', data: { disable_with: "게시 중..." }

