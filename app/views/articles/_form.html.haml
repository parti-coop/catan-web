.well
  = form_for @article do |f|
    .form-group
      = f.label :link
      = f.text_field :link, class: 'form-control'
      %p.help-block.help-block__search-link{ style: 'margin-top: 5px;'}

    .form-group
      = f.submit '저장', class: 'btn btn-primary btn-lg'
      - if @article.new_record?
        - if @article.issue.present?
          - back_to = issue_home_path(@article.issue)
        - else
          - back_to = root_path
      - else
        - back_to = @article
      = link_to back_to, class: 'btn btn-default' do
        취소
