%section.article-section
  .container
    = render 'post_meta', post: @article.acting_as

    %h2.article__title= @article.title

    - if @article.link.present?
      = link_to @article.link, @article.link, target: '_blank', class: 'embed'

    .post__body.article__body
      = simple_format auto_link(@article.body)

    .clearfix
      #share.pull-right
      .article__tags.post__tags
        - @article.tags.each do |tag|
          = link_to "##{tag.name}", tag_home_path(tag)

    .post__likes
      = render 'likes/like', post: @article.acting_as
      = render 'likes/like_detail', post: @article.acting_as

= render 'comments/comments', postable: @article

= render 'posts/recents', issue: @article.issue
