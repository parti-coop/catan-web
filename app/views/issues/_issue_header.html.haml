- issue ||= @issue
- active_tab ||= nil
- blocked ||= false
%section.parti-header-section.js-invisible-on-mobile-editing{ class: ('parti-header-section--simple' if local_assigns[:simple]) }
  - geo_pattern_background = capture do
    .parti-black-layer{ style: "background-image: #{GeoPattern.generate(issue.title, base_color: '#2a164b').to_data_uri};" }
  - logo_background = capture do
    .parti-black-layer{ style: "background-color: #777;" }
      %svg#blurred_i89pasu2y.bg-blur{height: "100%", width: "100%", preserveAspectRatio: "xMidYMid slice", version: "1.1", xmlns: "http://www.w3.org/2000/svg"}
        %filter#parti-header-blur-background
          %fegaussianblur{in: "SourceGraphic", stdDeviation: "20"}
        %image{externalResourcesRequired: "true", height: "100%", width: "100%", preserveAspectRatio: "xMidYMid slice", style: "filter:url(#parti-header-blur-background)", x: "0", y: "0", "xlink:href": issue.logo.md.url, "xmlns:xlink": "http://www.w3.org/1999/xlink"}
  - if (issue.read_attribute(:logo).present?) and (browser.ie?(">9") or !browser.ie?)
    = logo_background
  - else
    = geo_pattern_background
  .container
    .media
      .media-left
        .parti-logo
          = link_to smart_issue_home_path_or_url(issue) do
            .thumb{style: "background-image: url(#{issue.logo.md.url})"}
      .media-body
        - if local_assigns[:simple]
          %h4.parti-title
            = link_to smart_issue_home_path_or_url(issue) do
              = issue.title
              %small= meta_icons(issue)
        - else
          %h2.parti-title
            = issue.title
            %small= meta_icons(issue)
            .parti-info.visible-xs-block
              = link_to smart_issue_members_path(issue) do
                %span.parti-users-label 가입회원
                %span.parti-users-count
                  #{issue.member_users.count}명
          .parti-body
            = issue.body
          - if issue.frozen?
            .parti-buttons
              %span.parti-admin-button.cursor-pointer
                z
                %sup
                  z
                  %sup z
                휴면 중
          - else
            .parti-buttons
              - if !issue.group.private? and can?(:new_admit_members, issue)
                = link_to new_admit_members_issue_path(issue), class: 'parti-admin-button' do
                  %i.fa.fa-user-plus
                  초대
              - if !issue.private and !issue.group.private?
                - share_content = { 'share-url': smart_issue_home_url(issue), 'share-text': "#{issue.title} | #{issue.group.try(:title_share_format) || '빠띠'}" }
                %span.parti-admin-button.cursor-pointer{ data: { url: "#advert-info-#{dom_id(issue)}", action: "parti-share-popover", placement: "auto-bottom", data: "click" }.merge(share_content) }
                  %i.fa.fa-share-alt
                  공유
                  .hidden
                    .advert-info{id: "advert-info-#{dom_id(issue)}"}
                      = render 'application/share', providers: %w(facebook twitter telegram kakao-link kakao-story), share_map: { action: 'parti-share' }.merge(share_content)
              = render 'issues/header_buttons', issue: issue
              - if issue.telegram_link.present?
                %span.parti-telegram-button
                  = link_to issue.telegram_link, target: '_blank' do
                    = image_tag 'telegram_icon.png'
                    메신저 열기
  - if !local_assigns[:simple] and !blocked
    .parti-menu
      - counts_container = issue.counts_container
      .container
        .row
          .col-sm-8.col-xs-12
            .row
              .col-custom{ class: ('active' if active_tab.nil? || active_tab == :home) }
                = link_to smart_issue_home_path_or_url(issue), class: 'parti-menu-a' do
                  %h5 전체글

              .col-custom{class: ('active' if active_tab == :polls)}
                = link_to smart_issue_polls_or_surveys_path(issue), class: 'parti-menu-a' do
                  %h5= t('labels.polls_or_surveys')

              .col-custom{class: ('active' if active_tab == :links_or_files)}
                = link_to smart_issue_links_or_files_path(issue), class: 'parti-menu-a' do
                  %h5 자료

              .col-custom{class: ('active' if active_tab == :wikis)}
                = link_to smart_issue_wikis_path(issue), class: 'parti-menu-a' do
                  %h5 위키

              .col-custom{class: ('active' if active_tab == :folders)}
                = link_to smart_issue_folders_path(issue), class: 'parti-menu-a' do
                  %h5 폴더
                - if @issue.folders.any?
                  .hidden-xs
                    %span.dropdown{ style: 'position: absolute; top: 0; right: 0.8em;'}
                      %span.dropdown-toggle.cursor-pointer{ "aria-expanded": "false", "aria-haspopup": "true", "data-toggle": "dropdown" }
                        %i.fa.fa-angle-down.parti-menu-dropdownp-icon
                      %ul.dropdown-menu.pull-right{ "aria-labelledby": 'more-hashtag' }
                        %li.dropdown-header 폴더로 이동
                        - @issue.folders.sort_by_name.each do |folder|
                          %li
                            = link_to smart_folder_url(folder) do
                              = folder.title

              .col-custom{class: ('active' if active_tab == :users)}
                = link_to smart_issue_members_path(issue), class: 'parti-menu-a' do
                  %h5 멤버
