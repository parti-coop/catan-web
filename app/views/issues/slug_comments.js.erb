<% if @comments.last_page? %>
  $('#btn-next-page').hide();
<% else %>
  $('#btn-next-page').attr('href', '<%= url_for(page: @comments.next_page) %>');
<% end %>

var $comments_per_page = $($.parseHTML("<%= escape_javascript(render 'comments/comments_per_page', comments: @comments, show_issue: @issue.is_all?) %>"));
init_parti_post_modal($comments_per_page);
$('#comments .comments').append($comments_per_page);
