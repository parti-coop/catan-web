<% if @posts.empty? %>
if($('#posts .js-slug-hom-posts').data('last-stroked-at') === '') {
  $('#no-data').show();
}
<% end %>
$('#posts .js-slug-hom-posts').data('last-stroked-at', '<%= @posts.last.try(:last_stroked_at).try(:to_i) %>');
$('#posts .js-slug-hom-posts').data('is-last', <%= @is_last_page %>);
var $posts = $("<%= j(render 'posts/page', issue: @issue, posts: @posts, show_issue: false, show_unread_mark: true, previous_last_post_stroked_at: @previous_last_post_stroked_at) %>");
$('#posts .js-slug-hom-posts').append($posts);
parti_partial$($posts);
