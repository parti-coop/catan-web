- issue ||= @issue
%section.issue-header-section
  %section#issue
    .container.issue-info-wrapper.clearfix
      .issue-logo
        = link_to issue_home_path(issue) do
          .thumb{style: "background-image: url(#{issue.logo.md.url})"}
      .issue-info.issue-info--mobile
        = link_to issue_home_path(issue), class: 'issue-title' do
          = issue.title
        %span
          - if can? :update, issue
            = link_to '수정 /', [:edit, issue]
          - if can? :destroy, issue
            = link_to '삭제', issue, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' }
        %span(class="#{dom_id(issue)}-watch")
          = render 'watches/watch', issue: issue
      .issue-info
        .issue-count
          %span.comment-count
            = link_to issue_home_path(issue) do
              %span.label 댓글 :
              %span= issue.comments.count
              %span{style: 'margin-left: -2px;'} 개
          %span.user-count
            = link_to issue_users_path(issue) do
              %span.label 구독회원
              %span :
              %span= issue.watches.count
              %span{style: 'margin-left: -2px;'} 명
        .issue-body
          %p= issue.body


        - if local_assigns[:show_social_share]
          = render 'issues/share'

