- issue ||= local_assigns[:card]
%li.issue-card
  = link_to issue_home_path(issue) do
    .issue-card__thumb.img-circle{ style: "background-image: url(#{issue.logo.sm.url});" }
    %span.issue-card__title= issue.title
    .issue-card__meta
      %span.user-count
        %i.icon-user
        %b= issue.watches.count
      %span.comment-count
        %i.icon-comment
        %b= issue.comments.count
  .issue-card__btn
    = render 'watches/watch', issue: issue, cancel_btn_class: 'btn btn-ghost btn-sm btn-white', watch_btn_class: 'btn btn-primary btn-ghost btn-sm', maker_class: 'btn btn-ghost btn-sm btn-label'

