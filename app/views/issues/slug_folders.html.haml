= render 'issues/issue_header', active_tab: :folders

- partial_dom_id = "issue-selector-#{SecureRandom.uuid}"
%section.page-folders.contents-page
  .container
    .row
      .col-xs-12
        .threaded-folders
          .threaded-folders-header
            .header-cell.title 제목
            .header-cell.updated-at 업데이트
          .threaded-folders-body.background.js-lazy-partal-load{ id: partial_dom_id, data: { url: smart_issue_partial_folders_url(@issue, dom_id: partial_dom_id) } }
            - 8.times do
              .skeletons{ style: "padding-top: 7px; padding-bottom: 7px; margin: 0; padding-left: 18px;"}
                .skeleton-title{ style: "width: #{[30, 40, 50].sample}%; height: 16px;"}


