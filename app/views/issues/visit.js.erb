<% if @issue.blank? or @issue.errors.any? %>
  UnobtrusiveFlash.showFlashMessage("<%= t('errors.messages.unknown') %>", {type: 'error'});
<% else %>
  <% if params[:auto].blank? %>
    $('<%= issue_unread_banner_dom_selector(@issue) %>').remove();
  <% end %>
  $('.js-read-all-posts').trigger('parti-read-all-posts-destroy');
<% end %>
