= render 'issue_small_header', show_social_share: true

%section#comments
  .container
    .row
      .col-sm-9
        %section#content-tab-section
          = render 'issues/content_tabs', active_tab: :comments, counts_container: @issue.counts_container
        = render 'posts/new_form', issue: @issue
        = render 'comments/new_comments_count', new_comments_count_url: new_issue_comments_count_path(@issue.slug, first_id: @comments.first.id)
        = render 'comments/list', comments: @comments, show_issue: @issue.is_all?
        - unless @is_last_page
          = link_to '더보기', url_for(last_id: @comments.last.id), remote: true, class: 'btn btn-default btn-block', id: 'btn-next-page', data: { disable_with: '<i class="fa fa-spinner fa-pulse"></i>' }
      = render 'aside'

