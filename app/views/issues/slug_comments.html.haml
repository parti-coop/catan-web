= render 'issue_small_header', show_social_share: true

%section#issue-comments
  .container
    = render 'comments_filter', issue: @issue, posts: @posts
    .issue-comments
      = render 'comments/list', comments: @comments, issue: @issue, show_issue: @issue.is_all?
      .text-center
        = paginate @comments, theme: 'twitter-bootstrap-3'

%section#recommend-issue-section{ style: 'padding: 40px 0; background-color: #fafafa;' }
  .container
    = render 'issues/recommends', issue: @issue
