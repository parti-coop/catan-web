- if request.query_string.blank?
  - ['jpg', 'gif', 'png'].each do |ext|
    - if File.exist? "app/assets/images/groups/#{current_group.slug}_thumb_main_keyvisual_bg.#{ext}"
      - bg_path = "groups/#{current_group.slug}_thumb_main_keyvisual_bg.#{ext}"
      %section#group-key-visual-bg{style: "background-image: url(#{asset_url(bg_path)});"}
      - break
  - ['jpg', 'gif', 'png'].each do |ext|
    - if File.exist? "app/assets/images/groups/#{current_group.slug}_thumb_main_keyvisual.#{ext}"
      - bg_path = "groups/#{current_group.slug}_thumb_main_keyvisual.#{ext}"
      %section#group-key-visual
        = image_tag bg_path, style: "width: 100%"
      - break

  - if lookup_context.exists?("issues/#{host_group.slug}/_key_page")
    = render "issues/#{host_group.slug}/key_page"

= render 'application/group_home_mobile_header', active: 'home'

%section#home
  .container-fluid
    .row
      .col-xs-12.col-sm-12
        - if current_group.private_blocked? current_user
          .blocked
            %h4
              비공개 그룹입니다.
            - if current_group.member_requested? current_user
              %p
                이 그룹에서 활동하려면 먼저 가입승인을 받아야합니다.
                %span.text-nowrap
                  %strong<> 그룹오거나이저의 가입승인
                  을 기다려주세요.
            - else
              %p
                비공개 그룹에서 활동하려면 먼저 가입신청을 해주세요.
              %div(class="#{dom_id(current_group)}-member" style="padding-bottom: 12px;")
                - if user_signed_in?
                  = link_to group_member_requests_path, method: :post, 'data-disable-with': '처리 중...', class: 'btn btn-md btn-primary' do
                    가입하기
                - else
                  = link_to '가입하기', '#', data: { toggle: 'parti-login-overlay', label: '가입', 'after-login': h({action: :issue_member, id: current_group.id}.to_json) }, class: 'btn btn-md btn-primary'
        - else
          - if @posts_pinned.try(:any?)
            %section.group-home-posts-pinned
              = render 'posts/list_pinned', posts: @posts_pinned, show_issue: true, compact: true
          %section#parties-all
            .parties-all
              .parties-filter
                .parties-sort-select
                  .hidden
                    = render 'issues/index_filter'
                  %h4
                    = link_to '모두 보기', '#'
                .parties-search-form
                  = form_tag issues_path, method: :get, id: 'js-search-parties-form' do
                    = hidden_field_tag :sort, params[:sort]
                    = hidden_field_tag :category, params[:category]
                    .input-group.input-group-lg.input-group-keyword
                      %input.form-control{name: "keyword", placeholder: "무엇에 관심있으세요?", value: params[:keyword], type: "search", 'data-action': 'parti-clearable-search'}
                        %span.input-group-btn
                          %button.btn.btn-group-default{:type => "button"}
                            %i.fa.fa-search
              .parties-all-list
                = render 'issues/page'

        %section
          %h4
            = link_to t('labels.polls_or_surveys'), polls_or_surveys_path, class: "#{'active' if current_page?(controller: "/polls_or_surveys", action: :index)}"
          .row.masonry-container
            = render '/polls_or_surveys/page', posts: @polls_and_surveys

        %section
          %h4
            = link_to Wiki.model_name.human, wikis_path, class: "#{'active' if current_page?(controller: "/wikis", action: :index)}"

        %section
          %h4
            = link_to '자료', links_or_files_path, class: "#{'active' if current_page?(controller: "/links_or_files", action: :index)}"

        - if current_group.private?
          %section
            %h4
              = link_to '멤버', group_members_path, class: ('active' if current_page?('/group/members'))
