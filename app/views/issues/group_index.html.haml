= render 'application/group_home_sub_header', active: 'issues'

%section#issues-group-index
  .container
    .posts-header
      %h4.posts-header__title{style:"display:block; width:100%; clear:both; padding-bottom: 0;"}
        빠띠
        %small
          그룹 내 빠띠입니다.
      - if current_group.categories.try(:any?)
        .parties-filter
          .parties-filter-select.pull-left
            %nav
              %ul.list-inline
                %li= link_to '전체', issues_path, class: ('active' if params['category_slug'].blank?)
                - current_group.categories.each do |category|
                  %li
                    = link_to issues_path(category_slug: category.slug), class: ('active' if params['category_slug'] == category.slug) do
                      = category.name
    .parties-all-list
      = render 'issues/page', issues: @issues
