%section#facebook-like
  .container
    .fb-like{"data-action": "like", "data-href": "https://www.facebook.com/PartiUnion/", "data-layout": "standard", "data-share": "false", "data-show-faces": "false"}
%section#home
  .container
    .row
      .col-xs-12.col-sm-8
        %section#parties-all
          .parties-all
            .parties-filter
              .parties-search-form
                = form_tag issues_path, method: :get, id: 'js-search-parties-form' do
                  = hidden_field_tag :sort, params[:sort]
                  .input-group.input-group-lg.input-group-keyword
                    %input.form-control{name: "keyword", placeholder: "무엇에 관심있으세요?", value: params[:keyword], type: "search", 'data-action': 'parti-search-parties'}
                      %span.input-group-btn
                        %button.btn.btn-group-default
                          %i.fa.fa-search
              .parties-sort-select
                = render 'issues/index_filter'
            .parties-all-list
              = render 'issues/page'
      - unless is_small_screen?
        = render 'application/aside'
