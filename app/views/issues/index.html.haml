%section.parti-intro
  .container
    .parti-intro-wrapper
      .parti-intro__count>
        %span.count 자료
        %span 를 모으고
      .parti-intro__count>
        %span.count 논의
        %span 를 나누고
      .parti-intro__count
        %span.count 활동
        %span 을 조직하는 빠띠

%section.parties-all#issues
  .container
    .parties-all
      %h4
        뜨는 빠띠
        .count-label-wrapper
          .count-label= @basic_issues.count
      %ul.issue-card-wrapper.list-unstyled.clearfix
        - @groups.each do |group|
          = render 'groups/card', group: group

      %h4
        그룹
        .count-label-wrapper
          .count-label= @groups.count
      %ul.issue-card-wrapper.list-unstyled.clearfix
        - @groups.each do |group|
          = render 'groups/card', group: group

      %h4
        모든 빠띠
        .count-label-wrapper
          .count-label= @issues.count
      %ul.issue-card-wrapper.list-unstyled.clearfix
        - @issues.each do |issue|
          = render 'issues/card', issue: issue
