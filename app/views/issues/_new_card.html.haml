- issuve ||= local_assigns[:new_card]
.issue-new-card
  = link_to issue_home_path(issue) do
    .issue-card__thumb.img-circle{ style: "background-image: url(#{issue.logo.sm.url});" }
    .issue-card__title
      %span= truncate(issue.title, length: 23)
    .issue-card__body= excerpt(issue.body * 100, length: 35)
    .issue-card__meta
      %span.user-count
        %i.icon-user
        %b= issue.watches.count
      %span.comment-count
        %i.icon-comment
        %b= issue.comments.count

