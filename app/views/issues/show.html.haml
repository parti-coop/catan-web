= render 'issue_header'
.bs-component
  %section#issue-posts
    .container
      .row
        .col-sm-8
          = render 'post_type_filter', posts: @posts_for_filter
          - if @issue.is_all?
            = render @postables, show_issue: true
          - else
            = render @postables
        .col-sm-4
          - if @issue.is_all?
            %h4 핫이슈 (#{Issue.count})
            = render customize_partial_path(Issue.hottest, 'card')
          - else
            %h4
              = link_to users_issue_path(@issue) do
                %i.fa.fa-user
                활동하는 이
                %small (#{@issue.contributors.count})

            %hr

            = render 'issue_relateds'
