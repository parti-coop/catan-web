= render 'issues/issue_small_header', issue: @question.issue
%section.post-section.question-section
  .container
    %h2.post__title.question__title= @question.title

    = render 'posts/post_header', post: @question.acting_as

    .post__body.question__body.post-bg-question-item
      .post-bg-content
        = smart_format(@question.body)

    .question__tags.post__tags
      = render 'tags/collection', tags: @question.tags

    .post__likes
      = render 'likes/like', post: @question.acting_as
      = render 'likes/like_detail', post: @question.acting_as

%section.post-comments-section
  .container
    = render 'comments/comments', postable: @question

%section.answers-section
  = render @question.answers.sort_by_vote_point

  %section.new-answer-section
    .container
      .text-center
        %p.lead
          - if @question.answers.empty?
            %i.fa.fa-info-circle
            가장 먼저 질문자의 궁금증을 해결해 주세요.
            %p 아직 등록된 답변이 없습니다.
          - else
            %i.fa.fa-info-circle
            다른 답을 알고 계신가요?
      = form_for [@question, Answer.new] do |f|
        .form-group
          = f.text_area :body, placeholder: '내가 생각하는 답은..', class: 'form-control redactor'
        = f.submit '저장', class: 'btn btn-danger'

= render 'posts/recommends', issue: @question.issue, exclude: @question.acting_as
