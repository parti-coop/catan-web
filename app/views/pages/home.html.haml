= render 'top_banner'
%section#facebook-like
  .container
    .fb-like{"data-action": "like", "data-href": "https://www.facebook.com/parti.xyz/", "data-layout": "standard", "data-share": "false", 'data-width': "100%", "data-show-faces": "false"}
%section#home
  .container
    .row
      .col-xs-9
        %section#recommend-parties
          %ul.owl-carousel.owl-theme(data-action='parti-carousel' data-carousel-items='1' data-carousel-items-mobile='1' data-carousel-margin='7' data-carousel-dots='true' data-carousel-dots-each='true')
            - @recommend_map.each do |recommend|
              = link_to recommend[:url] do
                %li{style: "background-image: url(#{image_url(is_mobile? ? recommend[:mobile_image] : recommend[:image])});"}
        %section#parties-all
          .parties-all
            %form(onsubmit="return false;")
              .input-group.input-group-lg.input-group-keyword
                %input.form-control{name: "keyword", placeholder: (is_mobile? ? "관심있는 이슈를 다루는 빠띠를 찾아보세요." : "#{Issue.count}개의 빠띠 중에서, 관심있는 이슈를 다루는 빠띠를 찾아보세요."), type: "text", data: { action: 'parti-search-parties'}}
                  %span.input-group-btn
                    %button.btn.btn-group-default{:type => "button"}
                      %i.fa.fa-search

            .parties-all-loading
              %i.fa.fa-spinner.fa-pulse.fa-3x.fa-fw
            .parties-all-list
              = render 'issues/list'
      - unless is_mobile?
        = render 'application/aside'

