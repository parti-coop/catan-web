= render 'top_banner'
%section#facebook-like
  .container
    .fb-like{"data-action": "like", "data-href": "https://www.facebook.com/parti.xyz/", "data-layout": "standard", "data-share": "false", "data-show-faces": "false"}
= render 'pages/key_visuals' if is_small_screen?
%section#home
  .container
    .row
      .col-xs-9
        = render 'pages/key_visuals' unless is_small_screen?
        %section#parties-all
          .parties-all
            .parties-order-select
              .btn.btn-default.btn-parties-order
                = link_to '이름순', root_path(parti_order: 'title')
              .btn.btn-default.btn-parties-order{class: 'selected' }
                = link_to '인기순', root_path(parti_order: 'hottest')
              .btn.btn-default.btn-parties-order
                = link_to '최신순', root_path(parti_order: 'created_at')

            %form(onsubmit="return false;")
              .input-group.input-group-lg.input-group-keyword
                %input.form-control{name: "keyword", placeholder: (is_small_screen? ? "관심있는 빠띠를 찾아보세요." : "#{Issue.count}개의 빠띠 중에서, 관심있는 이슈를 다루는 빠띠를 찾아보세요."), type: "text", data: { action: 'parti-search-parties'}}
                  %span.input-group-btn
                    %button.btn.btn-group-default{:type => "button"}
                      %i.fa.fa-search

            .parties-all-loading
              %i.fa.fa-spinner.fa-pulse.fa-3x.fa-fw
            .parties-all-list
              = render 'issues/list'
      - unless is_small_screen?
        = render 'application/aside'
