@mixin button-variant($color, $background, $border) {
  background-color: $background;
  border-color: $border;

  &:focus,
  &.focus {
    background-color: darken($background, 10%);
    border-color: darken($border, 25%);
  }
  &:hover {
    background-color: darken($background, 10%);
    border-color: darken($border, 12%);
  }
  &:active,
  &.active,
  .open > &.dropdown-toggle {
    background-color: darken($background, 10%);
    background-image: none;
    border-color: darken($border, 12%);

    &:hover,
    &:focus,
    &.focus {
      background-color: darken($background, 17%);
      border-color: darken($border, 25%);
    }
  }
  &.disabled,
  &[disabled],
  fieldset[disabled] & {
    &:hover,
    &:focus,
    &.focus {
      background-color: $background;
      border-color: $border;
    }
  }

  .badge {
    background-color: $color;
  }
}

.front-app .front-navbar {
  > .menuitem > .link,
  > .menuitem > .notifications,
  > .profilemenus,
  > .profilemenus > .menuitem > .link {
    <%= group_navbar_text_color('color') %>
  }
  > .menuitem > .link:hover,
  > .menuitem > .notifications:hover,
  > .profilemenus > .menuitem:hover > .link,
  > .profilemenus > .menuitem:hover > .notifications {
    <%= group_navbar_text_darken_color('color') %>
  }
}
.front-app .navbar-group-menu {
  &,
  > .link {
    <%= group_navbar_text_color('color') %>
  }

  &:hover > .link {
    <%= group_navbar_text_darken_color('color') %>
  }
}
.front-app .front-navbar {
  <%= group_navbar_bg_color('background-color') %>
}
.front-app .front-joinbar {
  <%= group_navbar_bg_color('background-color') %>
  <%= group_navbar_text_color('color') %>
}
.front-app .front-joinbar > .link {
  <%= group_navbar_text_color('color') %>
}

.front-app .coc-box {
  > .jumbotron > .keytext {
    <%= group_coc_text_color('color') %>
  }
  > .jumbotron > .subtext {
    <%= group_coc_text_color('color') %>
  }
  > .jumbotron > .btn-key {
    <% if current_group.coc_btn_bg_color.present? %>
      @include button-variant(<%= current_group.coc_btn_bg_color %>, darken(<%= current_group.coc_btn_bg_color %>, 10%), darken(<%= current_group.coc_btn_bg_color %>, 10%));
    <% end %>
    <%= group_coc_btn_text_color('color') %>
  }
}
