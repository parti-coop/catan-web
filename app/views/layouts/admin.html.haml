!!!
%html{:lang => I18n.locale}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    = display_meta_tags

    =favicon_link_tag 'favicon.ico'

    = stylesheet_link_tag 'application_default', media: 'all'
    = stylesheet_link_tag 'vendors', media: 'all'
    %link{href: "https://cdn.rawgit.com/afeld/bootstrap-toc/v0.3.0/dist/bootstrap-toc.min.css", rel: "stylesheet"}
    %link{href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css", rel: "stylesheet"}

    /[if lt IE 9]
    %script{:src => "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"}
    %script{:src => "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"}

    = csrf_meta_tags

  %body{class: "app-#{params[:controller]} app-#{params[:controller]}-#{params[:action]}", data: {spy: "scroll", target: "#toc"}}
    %section(style='position: fixed; z-index: 1000; width: 100%')
      .container
        .unobtrusive-flash-container
    = render 'posts/modal'
    = render 'application/header'
    %section#admin
      .container
        .row
          .col-sm-3
            %nav#toc(data-spy="affix" data-toggle="toc")
          .col-sm-9
            = yield
    = javascript_include_tag 'application'
    %script{:src => "https://cdn.rawgit.com/afeld/bootstrap-toc/v0.3.0/dist/bootstrap-toc.min.js"}
    = yield :script if content_for?(:script)


