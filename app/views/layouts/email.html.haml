%html{:xmlns => "http://www.w3.org/1999/xhtml", "xmlns:o" => "urn:schemas-microsoft-com:office:office", "xmlns:v" => "urn:schemas-microsoft-com:vml"}
  %head
    /[if gte mso 15]
      <xml>
      <o:OfficeDocumentSettings>
      <o:AllowPNG/>
      <o:PixelsPerInch>96</o:PixelsPerInch>
      </o:OfficeDocumentSettings>
      </xml>
    %meta{:charset => "UTF-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    =stylesheet_link_tag 'email.css'
  %body
    %center
      %table#bodyTable{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :height => "100%", :width => "100%"}
        %tr
          %td#bodyCell{:align => "center", :valign => "top"}
            /[if gte mso 9]
              <table align="center" border="0" cellspacing="0" cellpadding="0" width="600" style="width:600px;">
              <tr>
              <td align="center" valign="top" width="600" style="width:600px;">
            %table.templateContainer{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
              %tr
                %td#templatePreheader{:valign => "top"}
              %tr
                %td#templateHeader{:valign => "top"}
                  %table.mcnTextBlock{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
                    %tbody.mcnTextBlockOuter
                      %tr
                        %td.mcnTextBlockInner{:valign => "top"}
                          %table.mcnTextContentContainer{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
                            %tbody
                              %tr
                                %td.mcnTextContent{:style => "padding-top:20px; padding-right: 30px; padding-bottom: 10px; padding-left: 30px;", :valign => "top"}
                                  %a{:href => "https://parti.xyz", :target => "_blank"}
                                    %img{:align => "none", :alt => "parti-xyz", :height => "40", :src => asset_url('parti_logo_white.png'), :style => "max-height: 40px;"}/
                              - if content_for?(:head)
                                %tr
                                  %td.mcnTextContent{:style => "text-align: left; color: #fff; padding-top:0px; padding-right: 30px; padding-bottom: 20px; padding-left: 30px; background-color: #966fd6;", :valign => "top"}
                                    = yield :head
              %tr
                %td#templateBody{:valign => "top"}
                  %table.mcnTextBlock{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
                    %tbody.mcnTextBlockOuter
                      %tr
                        %td.mcnTextBlockInner{:valign => "top"}
                          %table.mcnTextContentContainer{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
                            %tbody
                              %tr
                                %td.mcnTextContent{:style => "padding-top: 60px; padding-right: 18px; padding-bottom: 40px; padding-left: 18px; text-align: center;", :valign => "top"}
                                  = yield
              %tr
                %td#templateColumns{:valign => "top"}
                  /[if gte mso 9]
                    <table align="center" border="0" cellspacing="0" cellpadding="0" width="600" style="width:600px;">
                    <tr>
                    <td align="center" valign="top" width="160" style="width:160px;">
                  %table.columnWrapper{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "160"}
                    %tr
                      %td.columnContainer{:valign => "top"}
                        %table.mcnTextBlock{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
                          %tbody.mcnTextBlockOuter
                            %tr
                              %td.mcnTextBlockInner{:valign => "top"}
                                %table.mcnTextContentContainer{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
                                  %tbody
                                    %tr
                                      %td.mcnTextContent{:style => "padding-top:9px; padding-right: 18px; padding-bottom: 9px; padding-left: 18px;", :valign => "top"}
                                        %a{:href => "https://parti.xyz", :target => "_blank"}
                                          %img{:align => "none", :height => "36", :src => asset_url('parti_logo_white.png'), :style => "width: 88px; height: 40px; margin: 15px;", :width => "88"}/
                  /[if gte mso 9]
                    </td>
                    <td align="center" valign="top" width="180" style="width:180px;">
                  %table.columnWrapper{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "180"}
                    %tr
                      %td.columnContainer{:valign => "top"}
                        %table.mcnTextBlock{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
                          %tbody.mcnTextBlockOuter
                            %tr
                              %td.mcnTextBlockInner{:valign => "top"}
                                %table.mcnTextContentContainer{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
                                  %tbody
                                    %tr
                                      %td.mcnTextContent{:style => "padding-top:20px; padding-right: 18px; padding-bottom: 9px; padding-left: 18px;", :valign => "top"}
                                        %a{:href => "https://parti.xyz/", :style => "font-size: 10pt; line-height: 1.2;"} parti.xyz
                                        %br/
                                        %a{:href => "mailto:help@parti.xyz", :style => "font-size: 10pt; line-height: 1.2;"} help@parti.xyz
                  /[if gte mso 9]
                    </td>
                    <td align="center" valign="top" width="240" style="width:240px;">
                  %table.columnWrapper{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "240"}
                    %tr
                      %td.columnContainer{:valign => "top"}
                        %table.mcnTextBlock{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
                          %tbody.mcnTextBlockOuter
                            %tr
                              %td.mcnTextBlockInner{:valign => "top"}
                                %table.mcnTextContentContainer{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
                                  %tbody
                                    %tr
                                      %td.mcnTextContent{:style => "padding-top:20px; padding-right: 18px; padding-bottom: 9px; padding-left: 18px;", :valign => "top"}
                                        %a{:href => "http://fb.com/parti.xyz", :style => "font-size: 10pt; line-height: 1.2;"}> fb.com/parti.xyz
                                        Â 
                                        %br/
                                        = succeed "\u{a0}" do
                                          %a{:href => "http://twitter.com/parti-xyz", :style => "font-size: 10pt; line-height: 1.2;"} twitter.com/parti-xyz
                                        %br/
                                        %a{:href => "http://medium.com/parti-xyz-developers", :style => "font-size: 10pt; line-height: 1.2;"} medium.com/parti-xyz-developers
                  /[if gte mso 9]
                    </td>
                    </tr>
                    </table>
      /[if mso]
        </td>
      /[if mso]
        </tr>
        </table>
