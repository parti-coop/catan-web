!!!
%html{:lang => I18n.locale}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no", :name => "viewport"}
    = display_meta_tags

    = render 'favicons'

    - if current_group.present? and Sprockets::Railtie.build_environment(Rails.application, true)["groups/#{current_group.slug}/#{current_group.slug}_xs"].present?
      = stylesheet_link_tag "groups/#{current_group.slug}/#{current_group.slug}_xs", media: 'all'
    - else
      = stylesheet_link_tag 'application_xs', media: 'all'
    = stylesheet_link_tag 'vendors', media: 'all'
    %link{href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel: "stylesheet"}

    /[if lt IE 9]
    %script{:src => "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"}
    %script{:src => "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"}

    = csrf_meta_tags

  %body.js-menu-slideout{class: body_class }
    %section(style='position: fixed; z-index: 10000; width: 100%')
      .container
        .unobtrusive-flash-container

    = render 'shall_we_login'
    #post-modal.modal.post-modal

    - if content_for?(:header)
      = yield :header
    - else
      = render 'application/header.mobile'
    %main#js-main.main-panel
      = yield

    - if content_for?(:footer)
      = yield :footer

    = render 'application/photoswipe'

    = javascript_include_tag 'application'
    = yield :script if content_for?(:script)
    #fb-root
    - if is_mobile_app_get_request?(request)
      :javascript
        (function() {
          if(ufo.isApp()) {
            ufo.agent = '#{current_mobile_app_agent(request)}';
            ufo.version = '#{current_mobile_app_version(request)}';
          }
        })();
      - if request.get?
        :javascript
          (function() {
            if(ufo.isApp()) {
              ufo.changeCurrentUrl(window.location.href);
            }
          })();
        - if history_base_page_in_mobile_app?(current_group)
          :javascript
            (function() {
              if(ufo.isApp()) {
                ufo.changeBasePageUrl(window.location.href);
              }
            })();
        - elsif push_notified_page_in_mobile_app?
          :javascript
            (function() {
              if(ufo.isApp()) {
                ufo.changeBasePageUrl('#{ messages_url(subdomain: nil) }');
              }
            })();
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/ko_KR/sdk.js#xfbml=1&version=v2.6&appId=743728572394700";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    - if Rails.env.production?
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-74081354-1', 'auto');
        ga('send', 'pageview');
