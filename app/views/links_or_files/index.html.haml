= render 'application/group_home_sub_header', active: 'links_or_files'

%section#references
  .container
    .posts-header
      %h4.posts-header__title
        자료
        %small 모든 빠띠의 자료입니다.
      .posts-filter-select
        = render 'posts/sort_select'
    .row.masonry-container{data: {last_id: @posts.last.try(:id), is_last: @is_last_page.to_s, 'masonry-grid-sizer': '.grid-sizer'}}
      - if @posts.empty?
        .col-xs-12
          .bg-default
            %i.fa.fa-info-circle
            해당되는 글이 없습니다.
      - else
        .grid-sizer.col-sm-4.col-xs-6
        = render 'links_or_files/page', show_issue: true
    = paginate @posts, theme: 'catan'


