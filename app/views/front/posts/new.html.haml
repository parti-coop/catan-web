- content_for :playground_header_content do
  = render 'front/playground_header_content/channel_menu/simple', current_issue: @current_issue, current_folder: @current_folder

- content_for :playground_sidebar_content do
  .supplementary-boxes
    = render partial: 'front/channels/supplementary', locals: @supplementary_locals

= render 'front/pages/back', back_path: front_channel_path(@current_issue)

.post-form-box
  - if params[:type] != 'wiki'
    = render 'front/posts/form', current_issue: @current_issue, current_post: Post.new(issue: @current_issue), current_folder: @current_folder
  - else
    = render 'front/wikis/form', current_issue: @current_issue, current_folder: @current_folder, current_wiki: Wiki.new(post: Post.new(issue: @current_issue))
