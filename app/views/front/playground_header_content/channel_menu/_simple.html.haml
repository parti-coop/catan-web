
.playground-header.-nosticky
  .channel-menu.-simple
    .title
      .node
        = link_to front_channel_path(current_issue), class: 'link' do
          \#
          = current_issue.title
        = meta_icons(current_issue)
      - current_folder = if local_assigns[:current_post].present?
        - current_post.folder
      - elsif local_assigns[:current_folder].present?
        - current_folder
      - current_folder&.ancestors_and_self&.each do |folder|
        .node
          .delimiter &gt;
          = link_to folder.title, front_channel_path(current_issue, folder_id: folder.id), class: 'link'
