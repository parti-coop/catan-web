.bs-component
  %section#sign-up
    %h4.sign-up__title 민주적 일상 커뮤니티 '빠띠'
    %h1.text-center.sign-up__txt
      %i.fa.fa-user
      회원가입
    .sign-up__form
      = link_to '#', data: {action: 'parti-form-submit', 'form-target':'#login-form form', 'form-url': omniauth_authorize_url(:user, :facebook, subdomain: false) }, class: 'btn-sns btn-block' do
        %i.fa.fa-facebook{style: 'font-size: 22px; color: #2a3ab0; vertical-align: top;'}
        페이스북 아이디로 회원가입
      = link_to '#', data: {action: 'parti-form-submit', 'form-target':'#login-form form', 'form-url': omniauth_authorize_url(:user, :twitter, subdomain: false) }, class: 'btn-sns btn-block' do
        %i.fa.fa-twitter{style: 'font-size: 22px; color: #55acee; vertical-align: top;'}
        트위터 아이디로 회원가입
      = link_to '#', data: {action: 'parti-form-submit', 'form-target':'#login-form form', 'form-url': omniauth_authorize_url(:user, :google_oauth2, subdomain: false) }, class: 'btn-sns btn-block' do
        %i.fa.fa-google-plus{style: 'font-size: 22px; color: #c24851; vertical-align: top;'}
        구글플러스 아이디로 회원가입
      = link_to new_user_registration_url(subdomain: nil), class: 'btn-sns btn-block' do
        %i.fa.fa-envelope{style: 'font-size: 22px; color: #966fd6; vertical-align: top;'}
        이메일로 회원가입
      #login-form.text-center
        = form_tag nil, method: :get do
          = hidden_field_tag(:after_login)
          = hidden_field_tag(:group_slug, current_group.slug) if current_group.present?
          %label.remember_me
            = check_box_tag(:remember_me, '1', true)
            로그인 상태를 유지


  %section#sign-up-links
    .text-center
      %p
        이미 가입하셨나요?
        = link_to '로그인하기', new_user_session_path

