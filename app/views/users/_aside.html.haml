.col-sm-4.hidden-xs
  #aside
    .aside_issue

      - if @user.making_issues.displayable_in_current_group(current_group).any?
        %h5.aside-title 메이커인 빠띠
        %ul.list-unstyled.aside-issues
          = render customize_partial_path(@user.making_issues.displayable_in_current_group(current_group), 'issue_line')
      - if @user.only_member_issues(current_group).any?
        %h5.aside-title 가입한 빠띠
        %ul.list-unstyled.aside-issues
          = render customize_partial_path(@user.only_member_issues(current_group), 'issue_line')

      - Group.all_but(current_group).each do |group|
        - if @user.making_issues.only_group(group).any?
          %h5.aside-title 메이커인 #{group.title} 빠띠
          %ul.list-unstyled.aside-issues
            = render customize_partial_path(@user.making_issues.only_group(group), 'issue_line')
        - if @user.only_member_issues(group).any?
          %h5.aside-title 가입한 #{group.title} 빠띠
          %ul.list-unstyled.aside-issues
            = render customize_partial_path(@user.only_member_issues(group), 'issue_line')

    = render 'application/footer'
