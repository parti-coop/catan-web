.col-xs-3
  #aside
    .aside_issue
      %h4.aside-title 구독 중인 빠띠
      %ul.clearfix.list-unstyled
        = render customize_partial_path(@user.watched_issues.not_group, 'issue_line')
      - if current_user.watched_issues.in_group('gwangju').any?
        %h4.aside-title 구독 중인 '광주' 빠띠
        %ul.clearfix.list-unstyled
          = render customize_partial_path(@user.watched_issues.in_group('gwangju'), 'issue_line')
    = render 'application/footer'
