- issue ||= (@issue || Issue::OF_ALL)
- all_writing_counts = user.writing_counts(Issue::OF_ALL)
- writing_counts = user.writing_counts(issue)
%ul.list-unstyled.clearfix
  %li.user-panel
    .user-panel__thumb
      = link_to user_gallery_path(user) do
        .thumb.img-circle{style: "background-image: url(#{user.image.sm.url});"}
        %p= user.nickname
    .user-panel__info
      .row
        .col-xs-4.border-none
          = image_tag 'icon_comment.png'
          .user-panel__info__label 수다
          .user-panel__info__count= writing_counts.comments_count
        .col-xs-4
          = image_tag 'icon_vote.png'
          .user-panel__info__label 투표
          .user-panel__info__count= writing_counts.votes_count
        .col-xs-4
          = image_tag 'icon_heart.png'
          .user-panel__info__label 좋아요
          .user-panel__info__count= writing_counts.upvotes_count
