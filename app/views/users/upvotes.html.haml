= render 'user_header'
%section#user-gallery
  .container
    .row
      .col-xs-9
        %section#content-tab-section
          = render 'users/content_tabs', active_tab: :upvotes, counts_container: @user.writing_counts
        .issue-comments
          = render 'comments/list', comments: @comments, show_issue: true
          - unless @is_last_page
            = link_to '더보기', url_for(last_id: @upvotes.last.id), remote: true, class: 'btn btn-default btn-block', id: 'btn-next-page', data: { disable_with: '<i class="fa fa-spinner fa-pulse"></i>' }
      = render 'aside'



