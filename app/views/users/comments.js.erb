<% if @is_last_page %>
  $('#btn-next-page').hide();
<% else %>
  $('#btn-next-page').attr('href', '<%= url_for(last_id: @comments.last.id) %>');
<% end %>

$('#user-gallery .comments').append(parti_partial("<%= escape_javascript(render 'comments/comments_per_page', comments: @comments, show_issue: true) %>"));
