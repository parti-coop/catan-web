<% if @is_last_page %>
  $('#btn-next-page').hide();
<% else %>
  $('#btn-next-page').attr('href', '<%= url_for(last_id: @comments.last.try(:id)) %>');
<% end %>

$('#user-gallery .comments').append(parti_partial("<%= escape_javascript(render 'comments/comments_in_users', comments: @comments, show_issue: true) %>"));
