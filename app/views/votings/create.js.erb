var post_partial = parti_partial("<%= escape_javascript(render @poll, post: @poll.post) %>");
var specific_partial = parti_partial("<%= escape_javascript(render @poll, post: @poll.post) %>");
$('.<%= dom_id(@poll) %>').each(function(index, elm){
  if($(elm).closest('.post-card-with-comments').length) {
    $(elm).replaceWith(post_partial);
  } else {
    $(elm).replaceWith(specific_partial);
  }
});
parti_prepare_masonry($('body'));
<% if params[:partial] != 'post' %>
  $('.<%= dom_id(@poll) %>').click();
<% end %>
