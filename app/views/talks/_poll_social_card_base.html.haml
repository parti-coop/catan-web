!!!
%html{:lang => I18n.locale}
  %head
    %meta{:charset => "utf-8"}
    = stylesheet_link_tag asset_data_base64('application_default.css')
    = stylesheet_link_tag asset_data_base64('vendors.css')
    %link{href: "http://fonts.googleapis.com/earlyaccess/notosanskr.css", rel: "stylesheet"}
  %body(style='padding: 0;')
    %section.opinion-social-card-section{ style: "background-image: url(#{asset_data_base64('share_opinion.png')});" }
      .card
        .info
          \# #{@talk.issue.title}
          %br
          @#{@talk.user.nickname}
        .title{ class: (@talk.poll.title.length < 31 ? (@talk.poll.title.length < 17 ? 'short' : 'medium') : 'long') }
          = truncate(@talk.poll.title, length: 50)
