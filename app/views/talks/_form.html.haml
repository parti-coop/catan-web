.well
  = form_for [@issue, @talk] do |f|
    .form-group
      = label_tag :issue_title, Issue.model_name.human
      = text_field_tag :issue_title, @talk.issue.try(:title), class: 'form-control typeahead', placeholder: '이슈 제목', autocomplete: 'off', data: { 'provider': 'typeahead', 'typeahead-url': issues_path, 'typeahead-display-field': 'title', 'title' => @talk.issue.try(:title) }
      %p.help-block
    .form-group
      = f.label :title
      = f.text_field :title, class: 'form-control input-lg'
    .form-group
      = f.label :body
      = f.text_area :body, class: 'form-control redactor'
    .form-group
      = f.submit '저장', class: 'btn btn-primary btn-lg'
      - if @talk.new_record?
        - if @talk.issue.present?
          - back_to = issue_home_path(@talk.issue)
        - else
          - back_to = root_path
      - else
        - back_to = @talk
      = link_to back_to, class: 'btn btn-default' do
        취소
