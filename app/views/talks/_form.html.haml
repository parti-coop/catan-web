.well
  = form_for @talk do |f|
    .form-group
      = label_tag :issue_title, Issue.model_name.human, class: 'required'
      = text_field_tag :issue_title, @talk.issue.try(:title), class: 'form-control typeahead', placeholder: '이슈 제목', autocomplete: 'off', data: { 'provider': 'parti-issue-typeahead', 'typeahead-url': issues_path, 'typeahead-display-field': 'title', 'title' => @talk.issue.try(:title) }
      %p.help-block.typeahead-warning
      %p.help-block
        추천하는 이슈
        - Issue.featured_issues(current_user).each do |issue|
          %a(href='#' data-action="parti-form-set-vaule" data-form-control="form input#issue_title" data-form-vaule="#{issue.title}")
            = issue.title

    .form-group
      = f.label :title, class: 'required'
      = f.text_field :title, class: 'form-control input-lg'

    .form-group
      = f.submit '저장', class: 'btn btn-primary btn-lg'
      = link_to @talk, class: 'btn btn-default' do
        취소
