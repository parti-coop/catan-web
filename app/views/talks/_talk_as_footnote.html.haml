- talk = talk_as_footnote
- post = talk.acting_as
.post-inline[post]
  %h5.post-inline__title
    = render 'posts/post_inline_footnote', obj: talk, show_issue: local_assigns[:show_issue]
    = link_to '#', data: { toggle: "parti-post-modal", target: '#post-modal', url: talk_path(talk) } do
      = talk.title
  .post-inline__comment.pull-right
    = link_to '#', data: { toggle: "parti-post-modal", target: '#post-modal', url: talk_path(talk) } do
      = image_tag 'icon_comment.png'
      %b= post.comments_count
