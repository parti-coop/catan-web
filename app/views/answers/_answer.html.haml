.answer-section[answer]
  .container
    .row
      .col-xs-1.text-center
        %div
          - if user_signed_in?
            - if answer.agreed_by? current_user
              %i.fa.fa-caret-up.fa-4x
            - else
              = link_to post_votes_path(answer.acting_as, vote: {choice: :agree}), method: :post do
                %i.fa.fa-caret-up.fa-2x
            %div(style='font-size: 210%')
              = answer.votes.point
            - if answer.disagreed_by? current_user
              %i.fa.fa-caret-down.fa-4x
            - else
              = link_to post_votes_path(answer.acting_as, vote: {choice: :disagree}), method: :post do
                %i.fa.fa-caret-down.fa-2x
          - else
            %i.fa.fa-caret-up.fa-3x
            %div
              = answer.votes.point
            %i.fa.fa-caret-down.fa-3x
      .col-xs-11
        %a.anchor{id: dom_id(answer)}
        .answer-item
          .clearfix
            %p.pull-right
              = byline answer.user
              %i.fa.fa-clock-o
              = date_f answer.created_at
              - if can? :update, answer
                = link_to '수정', [:edit, answer]
              - if can? :destroy, answer
                = link_to '삭제', answer, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' }
            %span.label.label-default
              답변1
          .answer-body
            = simple_format answer.body

          = render 'comments/comments', postable: answer, style: :inline
