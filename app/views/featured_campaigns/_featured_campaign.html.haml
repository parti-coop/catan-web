%li
  .featured-campaign
    - unless is_small_screen?
      = link_to featured_campaign.url do
        - image_url = is_small_screen? ? featured_campaign.mobile_image.url : featured_campaign.image.url
        %img{src: image_url}
    - else
      = link_to featured_campaign.url do
        .featured-campaign{style: "background-image: url(#{is_small_screen? ? featured_campaign.mobile_image.url : featured_campaign.image.url});"}
          .featured-campaign__label 캠페인
          .featured-campaign__title-wrapper
            .featured-campaign__title= simple_format featured_campaign.title, {}, wrapper_tag: 'span'
          .featured-campaign__body-wrapper
            .featured-campaign__body= simple_format featured_campaign.body, {}, wrapper_tag: 'span'
