- join_btn_class = 'btn btn-xs btn-primary'
- member_btn_class = 'btn btn-xs btn-ghost'
- issue = local_assigns[:issue]
%span(class="#{dom_id(issue)}-member")
  - if user_signed_in?
    - if issue.member?(current_user)
      - unless issue.made_by? current_user
        %button.btn-member{"data-url": "#cancel-member-#{dom_id(issue)}", "data-action": "parti-popover", "data-placement": "bottom", class: member_btn_class}
          가입함
          %i.fa.fa-caret-down
        .hidden
          .cancel-member{id: "cancel-member-#{dom_id(issue)}"}
            = link_to cancel_issue_members_path(issue), method: :delete do
              빠띠 나가기
    - elsif issue.member_requested?(current_user)
      %button.btn-member{ class: member_btn_class }
        가입요청 중
    - else
      = link_to smart_members_or_member_requests_path(issue), method: :post, class: join_btn_class do
        가입하기
  - else
    = link_to '가입하기', '#', data: { toggle: 'parti-login-overlay', label: '가입', 'after-login': h({action: :issue_member, id: issue.id}.to_json) }, class: join_btn_class
