.modal-content.group-modal-dialog
  .modal-header
    %button.close{type: "button", "data-dismiss": "modal", "aria-label": "Close"}
      %span{"aria-hidden":"true"}
        &times;
    %h4.modal-title
      탈퇴시키기
  .modal-body
    = form_tag ban_issue_members_path(issue, user_id: user.id), method: :delete, remote: true, data: { 'confirm': '정말 탈퇴시키시겠습니까?', 'disable-with': '처리 중...' } do
      .form-group
        = label_tag :ban_message, "#{user.nickname}님에게 이유를 보내주세요."
        = text_area_tag :ban_message, nil, class: 'form-control'
      = submit_tag '전송', class: 'btn btn-primary'
