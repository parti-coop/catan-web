<% if @is_last_page %>
  $('#btn-next-page').hide();
<% else %>
  $('#btn-next-page').attr('href', '<%= url_for(last_id: @comments.last.id) %>');
<% end %>

var $comments_per_page = parti_partial("<%= escape_javascript(render 'comments/comments_per_page', comments: @comments, show_issue: true) %>");
$('#comments .comments').append($comments_per_page);
