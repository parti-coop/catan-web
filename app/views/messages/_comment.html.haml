%div{id: "#{dom_id(message)}-url-source", data: { url: smart_post_url(comment.post) } }
  - if comment.post.user == message.user
    %strong
      = message.sender.nickname
      님이 내 게시글에 댓글을 남겼습니다.
    %br
    = link_to excerpt(comment.body, length: 100), comment.post
  - else
    %strong
      %span
        #{comment.post.user.nickname}님의 게시글에
        #{message.sender.nickname}님이
      %span
        - if comment.mentioned?(message.user)
          댓글에서 나를 언급했습니다
        - else
          댓글을 남겼습니다.
    %br
    = link_to excerpt(comment.body, length: 100), comment.post
