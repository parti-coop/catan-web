<%
  upvote = message.messagable
  issue = message.messagable.issue
  if upvote.upvotable.is_a? Comment
    post = upvote.upvotable.post
    body = "#{message.sender.nickname}님이 내 댓글에 공감합니다."
  else
    post = upvote.upvotable
    body = "#{message.sender.nickname}님이 내 게시글을 공감합니다."
  end
%>
{
  "notification": {
    "title": "<%= issue.title %>",
    "body": "<%= body %>"
  },
  "data": {
    "title": "<%= issue.title %>",
    "body": "<%= body %>",
    "type": "post",
    "param": "<%= post.id %>"
  }
}
