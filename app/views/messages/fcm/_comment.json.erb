<%
  comment = message.messagable
  body = "#{comment.user.nickname}: #{comment.body.try(:truncate, 120)}"
%>
{
  "data": {
    "title": "<%= comment.issue.title %> <%= Issue.model_name.human %>",
    "body": "<%= body %>",
    "type": "post",
    "priority": "<%= comment.mentioned?(message.user) ? "high" : "low" %>",
    "param": "<%= comment.post.id %>"
  }
}

