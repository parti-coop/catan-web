.modal-content.group-modal-dialog
  .modal-header
    %button.close{type: "button", "data-dismiss": "modal", "aria-label": "Close"}
      %span{"aria-hidden":"true"}
        &times;
    %h4.modal-title
      그룹에 가입신청하기
  .modal-body
    = form_tag group_member_requests_path do
      .form-group
        %label
          = t("group.#{host_group.slug}.request_join", cascade: true)
        = text_area_tag :description, nil, class: 'form-control', placeholder: 'ex) 소속, 성함'
      .form-group.text-right
        = submit_tag "신청합니다", class: 'btn btn-primary', data: { disable_with: "진행 중..." }
