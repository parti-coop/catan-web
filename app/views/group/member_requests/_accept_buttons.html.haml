- if current_group.present? and current_group.made_by?(current_user)
  = link_to accept_group_member_requests_path(user_id: user.id), method: :post, class: 'btn btn-sm btn-default' do
    가입승인
  %button.btn.btn-sm.btn-default{"data-url": "##{dom_id(user)}__cancel-member-request", "data-action": "parti-popover", "data-placement": "bottom", "data-backdrop": "true"}
    요청거절
  .hidden
    %div{ id: "#{dom_id(user)}__cancel-member-request" }
      = form_tag reject_group_member_requests_path(user_id: user.id), method: :delete do
        .form-group
          = label_tag :cancel_message, "#{user.nickname}님에게 거절 이유를 보내주세요."
          = text_area_tag :cancel_message, nil, class: 'form-control'
        = submit_tag '거절', class: 'btn btn-primary'
