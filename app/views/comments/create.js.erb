<% if @comment.persisted? %>
  var $comment = $.parseDiv$("<%= escape_javascript(render 'comments/comment', comment: @comment) %>");
  parti_prepare($comment);
  $('<%= params[:body_control] %>').val('');
  $('<%= params[:count_label] %>').text('<%= @comments_count %>');
  $('<%= params[:container] %>').append($comment);
<% end %>
