<% if @comment.persisted? %>
  $("<%= raw new_comment_form_body_input_dom_selector(@comment.post) %>").val('');
  var $comment = $("<%= escape_javascript(render 'comments/comment_line', comment: @comment) %>");
  $comment.insertBefore($("<%= raw new_comment_form_dom_selector(@comment.post) %>").closest('.comment-line'));
  parti_partial$($comment);
  $("<%= raw comments_count_dom_selector(@comment.post) %>").text("<%= @comment.post.reload.comments_count %>");
<% end %>
