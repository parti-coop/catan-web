- comment = comment_in_list
.media{id: dom_id(comment) }
  .media-left
    = link_to user_gallery_path(comment.user) do
      = image_tag comment.user.image_url, class: 'media-object img-circle', style: 'width:50px;height:50px;'
  .media-body
    = link_to user_gallery_path(comment.user) do
      %strong= comment.user.nickname
    %i.fa.fa-clock-o
    = date_f comment.created_at
    - if can? :update, comment
      = link_to [:edit, comment] do
        %i.fa.fa-edit>
    - if can? :destroy, comment
      = link_to comment, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' } do
        %i.fa.fa-trash-o>
    .comment__body
      %p
        = smart_format(comment.body)
    - if local_assigns[:show_opinion]
      .row
        .col-sm-8.col-xs-12
          = render 'opinions/card', card: comment.post.specific
    - else
      .comment__footer.text-muted
        = render customize_partial_path(comment.post.specific, ->(model) { "#{model.class.model_name.plural}/#{model.class.model_name.singular}_as_footnote" }), show_issue: local_assigns[:show_issue]
