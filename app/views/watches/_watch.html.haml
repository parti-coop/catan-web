- if user_signed_in?
  - if issue.watched_by?(current_user)
    = link_to cancel_issue_watches_path(issue), method: :delete do
      구독끊기
  - else
    = link_to issue_watches_path(issue), method: :post, class: 'btn btn-primary btn-ghost btn-sm' do
      구독하기
- else
  = link_to '구독하기', '#', data: { toggle: 'parti-login-overlay', label: '구독', 'after-login': h({action: :issue_watch, id: issue.id}.to_json) }, class: 'btn btn-primary btn-ghost btn-sm'
