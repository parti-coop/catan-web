<% if @watch.present? %>
  <% if params[:partial] == 'intro' %>
    <% script = escape_javascript(render customize_partial_path(@watch.issue, ->(model) { "#{model.class.model_name.plural}/card_in_intro" }), issue: @issue) %>
    card_query = '.<%= dom_id(@watch.issue) %>-card';
    $(card_query).replaceWith(parti_origin_partial("<%= script %>"));
    parti_ellipsis($(card_query));
    <% if current_user.need_to_more_watch?(current_group) %>
      $('#btn-continue').addClass( "disabled" );
      $('#btn-continue').removeAttr("href");
    <% end %>
  <% else %>
    $(".btn-watch").webuiPopover('destroy');
    $('.<%= dom_id(@watch.issue) %>-watch').replaceWith(parti_origin_partial("<%= escape_javascript(render 'watches/watch', issue: @issue) %>"));
  <% end %>
<% end %>
