<% if @error %>
  UnobtrusiveFlash.showFlashMessage("<%= t('errors.messages.unknown') %>", {type: 'error'});

  var $message = $("<span style='text-decoration: underline;' class='only-clickable'>다시 저장하기</span>").on('click', function() {
    $('.js-draggable-slug-folder').trigger('parti-draggable-slug-folder-item-save');
  });
  $('.js-slug-folder-autosave').html($message);
<% else %>
  var $message = $('<span>저장했습니다. <%= j(date_f(DateTime.now)) %></span>');
  $('.js-slug-folder-autosave').html($message);
  $('.js-slug-folder-autosave').find('time[data-time-ago]').timeago();

  $('.js-draggable-slug-folder').trigger('parti-draggable-slug-folder-item-destroy');
  $('.js-draggable-slug-folder').remove();
  var $dom = $('<%= j(render 'issues/slug_folders_partial', issue: @issue, folders: @folders, dom_id: params[:dom_id]) %>');

  $('#<%= params[:dom_id] %>').replaceWith($dom);
  parti_partial$($dom, true);


<% end %>
