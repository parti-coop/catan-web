%nav#site-header.navbar.navbar-default.navbar-fixed-top.js-fixed-header
  .container.clearfix
    .navbar-header.navbar-header-center.js-navbar-header
      .navbar-brand
        - back_buttons = capture do
          - if history_backable_in_mobile_app?
            %a.history-back.js-btn-history-back-in-mobile-app{ href: "#", 'aria-label': only_mobile_app(request, 'header-back'), data: { 'back-to-url': fixed_history_back_url_in_mobile_app } }
              %i.fa.fa-angle-left
          %a.history-back.js-close-editor-in-mobile-app.hidden{ href: '#' }
            %i.fa.fa-angle-left
        .js-navbar-header-title-default
          = back_buttons
          %a{ href: root_path, 'aria-label': only_mobile_app(request, 'header-brand') }
            - if host_group.indie?
              %img{ alt: 'parti', src: asset_path('parti_logo_purple.png')}
            - else
              = host_group.head_title
        - if mobile_navbar_title.present?
          .js-navbar-header-title-page.collapse
            = back_buttons
            .js-scroll-top= mobile_navbar_title


    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li.notification
          = link_to messages_url(subdomain: nil), class: "#{'active' if current_page?(controller: '/messages', action: :index)}" do
            %span.active-bell.js-active-bell{ class: ('collapse' if current_user.unread_messages_count <= 0) }
              %i.fa.fa-bell
              %span.label.label-danger{ style: 'width: 10px; height: 10px; position: absolute; padding: 0; border-radius: 5px; right: 5px; top: 5px;'}
            %span.js-inactive-bell{ class: ('collapse' if current_user.unread_messages_count > 0) }
              %i.fa.fa-bell
      - else
        %li.sign-up
          = link_to new_user_session_path, 'aria-label': only_mobile_app(request, 'header-login') do
            로그인
            %i.fa.fa-sign-in

    %ul.nav.navbar-nav.navbar-left
      %li.js-btn-drawer
        %a.btn-header.js-slideout-toggle
          - if host_group.try(:is_light_theme?)
            = image_tag 'btn_mobile_menu.png', 'aria-label': only_mobile_app(request, 'header-slideout-toggle')
          - else
            = image_tag 'btn_mobile_menu_white.png', 'aria-label': only_mobile_app(request, 'header-slideout-toggle')
= render 'application/drawer_menu.mobile'
