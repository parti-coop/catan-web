%nav#site-header.navbar.navbar-default.navbar-fixed-top.js-fixed-header
  .container.clearfix
    .navbar-header.navbar-header-center
      %a.navbar-brand.cursor-pointer
        - if host_group.indie?
          %img{ alt: 'parti', src: asset_path('parti_logo_purple.png')}
        - else
          #{host_group.head_title}

    %ul.nav.navbar-nav.navbar-left
      %li
        %a.btn-drawer-menu.js-slideout-toggle{ href: '#'}
          - if host_group.try(:is_light_theme?)
            = image_tag 'btn_mobile_menu_white.png'
          - else
            = image_tag 'btn_mobile_menu.png'
= render 'application/drawer_menu.mobile'
