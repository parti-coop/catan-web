#site-header
  %nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid.clearfix
      .navbar-header.navbar-header-center
        %a.navbar-brand{ href: root_path }
          #{current_group.site_title}
          = security_icon(current_group)
      %ul.nav.navbar-nav.navbar-left
        %li
          %a.btn-mobile-menu{ href: '#'}
            = image_tag 'btn_mobile_menu_white.png'

      #collapsable.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-left.hidden
          %li= link_to t('labels.polls_or_surveys'), polls_or_surveys_path, class: "#{'active' if current_page?(controller: "/polls_or_surveys", action: :index)}"
          %li= link_to '자료', links_or_files_path, class: "#{'active' if current_page?(controller: "/links_or_files", action: :index)}"
          %li= link_to Wiki.model_name.human, wikis_path, class: "#{'active' if current_page?(controller: "/wikis", action: :index)}"
          - if current_group.private?
            %li
              = link_to '멤버', group_members_path, class: ('active' if current_page?('/group/members'))

        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li.notification
              - if user_signed_in?
                - if current_user.messages.empty?
                  %li.notification
                    = link_to messages_path, class: "#{'active' if current_page?(controller: '/messages', action: :index)}" do
                      %i.fa.fa-bell
                      알림
                - else
                  %li.notification.dropdown#js-notification{ 'data-url': messages_path(format: :js) }
                    %a.dropdown-toggle.js-notification-dropdown{"data-toggle" => "dropdown", :href => "#", class: "#{'active' if current_page?(controller: '/messages', action: :index)}"}
                      %span.js-active-bell{ class: ('collapse' if current_user.unread_messages_count <= 0) }
                        %span.icon-bell-stack
                          %i.fa.fa-circle.fa-stack-1x
                          %i.fa.fa-bell.fa-stack-1x.fa-inverse
                        %span.label.label-danger= trim_count current_user.unread_messages_count
                      %span.js-inactive-bell{ class: ('collapse' if current_user.unread_messages_count > 0) }
                        %i.fa.fa-bell
                      알림
                    %ul.dropdown-menu.js-notification-dropdown-menu
          - else
            %li.sign-up
              = link_to '회원가입', pre_sign_up_users_path
            %li.sign-up
              = link_to '로그인', new_user_session_path

        - if current_group.categories.try(:any?)
          %ul.nav.navbar-nav.navbar-bottom
            - current_group.categories.each do |category|
              %li= link_to "#{category.name}", category_path(slug: category.slug), class: "#{'active' if current_page?(category_path(slug: category.slug))}"

  = render 'drawer_menu'