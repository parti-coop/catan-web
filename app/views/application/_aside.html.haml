= aside_column_tag do
  #aside
    .aside_user
      = render 'users/user_panel', user: current_user
    - if user_signed_in?
      .aside_issue
        .aside_issue_btn
          = link_to new_issue_path, class: 'btn btn-primary btn-block' do
            - if current_group.blank?
              %span{ style: 'font-weight: 200' } 이슈와 관심사에 대한
            #{ current_group and "#{current_group.title_short_format}" } 빠띠 만들기
          - if current_group.blank?
            = link_to new_group_configuration_url(subdomain: nil), class: 'btn btn-primary btn-primary-ghost btn-ghost btn-block' do
              %span{ style: 'font-weight: 200' } 팀과 커뮤니티를 위한
              그룹 만들기

        - if params[:controller] == 'dashboard' and params[:action] == 'index'
          .aside_search
            = form_tag dashboard_path, method: :get do
              .form-group.has-feedback
                = search_field_tag :q, (@search_q || ("##{@hashtag}" if @hashtag.present?)), placeholder: '내 피드에서 게시글 찾기...', class: 'form-control'
                %span.form-control-feedback{ style: 'pointer-events: initial;' }
                  = button_tag class: 'btn btn-link btn-xs' do
                    %i.fa.fa-search.text-muted

    = render 'application/footer'
