%nav.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.offcanvas-toggle{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "offcanvas", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{ href: root_path }
        %img{ alt: 'parti', src: asset_path('logo_parti_slogan_white.png'), style: ('max-height: 28px;')}

    #navbar.navbar-offcanvas.navbar-offcanvas-right
      %ul.nav.navbar-nav
        %li
          = link_to issues_path do
            모든 이슈
            %small (#{Issue.count})
        - if user_signed_in?
          - current_user.watched_issues.each do |issue|
            %li
              = link_to issue_home_path(issue) do
                .clearfix
                  .pull-left(style='width: 60px; margin-right: 10px')
                    .issue--related
                      .issue__logo{style: "background-image: url(#{issue.logo_url});"}
                        = issue.title
                  %div
                    %strong= issue.title
                    .issue__count.text-muted
                      %span
                        %i.fa.fa-user
                        = issue.watches.count
                        - if issue.watches.latest.any?
                          %small= "+#{issue.watches.latest.count}"
                      %span
                        %i.fa.fa-file-text-o
                        = issue.posts.count
                        - if issue.posts.latest.any?
                          %small= "+#{issue.posts.latest.count}"

        %li.divider{:role => "separator"}
        - if user_signed_in?
          %li
            = byline current_user
          %li
            = link_to '대시보드', dashboard_path
          %li
            = link_to likes_by_me_path do
              내
              %i.fa.fa-thumbs-up.text-danger(style='font-size: 125%')
          %li
            = link_to edit_user_registration_path do
              프로필 수정
          %li
            = link_to destroy_user_session_path, method: :delete do
              로그아웃
        - else
          %li= link_to '회원가입', new_user_registration_path
          %li= link_to '로그인', new_user_session_path

        %li.divider{:role => "separator"}
        %li
          = link_to slug_issue_path(slug: Issue::SLUG_OF_ASK_PARTI) do
            %i.fa.fa-question
            %strong Ask Parti
            .text-muted 제안이나 의견이 있으세요?

        %li
          %a(href='mailto:help@parti.xyz')
            %i.fa.fa-bug
            오류와 버그 신고

