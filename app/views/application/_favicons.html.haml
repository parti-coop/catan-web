- if host_group.open_square? or !exist_asset?("favicons/#{current_group.slug}/favicon-32x32.png")
  %link{href: asset_url("favicons/apple-touch-icon.png"), rel: "apple-touch-icon", sizes: "180x180"}
  %link{href: asset_url("favicons/favicon-32x32.png"), rel: "icon", sizes: "32x32", type: "image/png"}
  %link{href: asset_url("favicons/favicon-16x16.png"), rel: "icon", sizes: "16x16", type: "image/png"}
  %meta{content: "#ffffff", name: "theme-color"}
- else
  %link{href: asset_url("favicons/#{current_group.slug}/apple-touch-icon.png"), rel: "apple-touch-icon", sizes: "180x180"}
  %link{href: asset_url("favicons/#{current_group.slug}/favicon-32x32.png"), rel: "icon", sizes: "32x32", type: "image/png"}
  %link{href: asset_url("favicons/#{current_group.slug}/favicon-16x16.png"), rel: "icon", sizes: "16x16", type: "image/png"}
  %meta{content: "#ffffff", name: "theme-color"}
