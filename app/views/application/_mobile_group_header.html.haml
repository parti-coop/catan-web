#new-theme-site-header
  %nav.navbar.navbar-default.navbar-fixed-top
    .container.clearfix
      .navbar-header.navbar-header-center
        %a.navbar-brand{ href: root_path }
          #{current_group.head_title}
      %ul.nav.navbar-nav.navbar-left
        %li
          %a.btn-mobile-menu{ href: '#'}
            = image_tag 'btn_mobile_menu.png'
      %ul.nav.navbar-nav.navbar-right-xs
        - if user_signed_in? and (current_user.members.any? or current_group.categories.try(:any?))
          %li
            %a.collapse-toggle.collapsed(href="#" data-toggle="collapse" data-target="#nav-member-parties")
              내 빠띠
              %span.caret

      - if user_signed_in? and (current_user.members.any? or current_group.categories.try(:any?))
        #nav-member-parties.collapse.collapse-parties
          %ul.nav.navbar-nav
            %li.parti-tag-line
              = link_to dashboard_url(subdomain: '') do
                %i.fa.fa-home
                내 홈
            %li.nav-divider
            - if current_group.categories.try(:any?)
              %li.dropdown-header
                주제별 빠띠
              - current_group.categories.each do |category|
                %li.parti-tag-line
                  = link_to category_path(slug: category.slug) do
                    = category.name
            - if current_user.member_issues.only_group(current_group).any?
              %li.dropdown-header
                가입한 빠띠
                #{current_user.member_issues.only_group(current_group).count}
            - current_user.member_issues.only_group(current_group).each do |issue|
              = render 'issues/issue_line', issue: issue

            - Group.all_but(current_group).each do |group|
              - if current_user.member_issues.only_group(group).any?
                %li.dropdown-header
                  #{group.aside_title}
                  #{current_user.member_issues.only_group(group).count}
              - current_user.member_issues.only_group(group).each do |issue|
                = render 'issues/issue_line', issue: issue

  .mobile-list#mobile-list
    = image_tag 'icon_close_white.png', class: 'mobile-list__close'
    - if user_signed_in?
      .mobile-list__profile
        = byline current_user
        .mobile-list__messages
          = link_to messages_path do
            - if current_user.unread_messages_count > 0
              %span.fa-stack
                %i.fa.fa-bell.fa-stack-1x{style: 'color: white'}
                %i.icon-dot-corner.fa-stack-1x
            - else
              %i.fa.fa-bell{style: 'color: white'}
    - else
      .mobile-list__profile
        = image_tag 'img_default_profile.png', class: 'default-profile'
        = link_to new_user_session_path, class: 'btn-new-user' do
          로그인/회원가입
    %ul.mobile-list__menu.list-unstyled
      %li= link_to '모든 빠띠', issues_path
      - if user_signed_in?
        %li.divider
        %li= link_to '프로필 수정', edit_user_registration_path
        %li= link_to '로그아웃', destroy_user_session_path, class: 'user-link', method: :delete
      %li.divider
      %li= link_to '빠띠 소개', '/about'
      %li= link_to '이용약관', '/terms'
      %li= link_to '개인정보취급정책', '/privacy'
      %li
        %a(href='mailto:help@parti.xyz')
          오류 및 버그 신고
      %li
        = link_to smart_issue_home_url(Issue.parti_parti) do
          제안 및 의견 &middot; 빠띠만든당
    - if is_kakao_talkable?
      .mobile-list__yellow
        %a{href: 'http://plus.kakao.com/home/@parti_xyz', target: '_blank'}
          = image_tag 'icon_yellow.png', alt: 'btn-yellow'
    .mobile-list__licence
      %a{href: 'http://creativecommons.org/licenses/by-nc/4.0/deed.ko', target: '_blank'}
        = image_tag 'icon_cc.png', alt: 'icon-cc', class: 'footer-cc'


