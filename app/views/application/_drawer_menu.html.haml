.mobile-list#mobile-list
  %i.fa.fa-times.mobile-list__close{style:"color:#ffffff"}
  - if user_signed_in?
    .mobile-list__profile
      = byline current_user
      .mobile-list__messages
        = link_to messages_path do
          - if current_user.unread_messages_count > 0
            %span.fa-stack
              %i.fa.fa-bell.fa-stack-1x{style: 'color: white'}
              %i.icon-dot-corner.fa-stack-1x
          - else
            %i.fa.fa-bell{style: 'color: white'}
  - else
    .mobile-list__profile
      = image_tag 'img_default_profile.png', class: 'default-profile'
      .btn-new-user
        = link_to '회원가입', pre_sign_up_users_path
        \|
        = link_to '로그인', new_user_session_path
  %ul.mobile-list__menu.list-unstyled
    - if user_signed_in?
      %li.home-line
        = link_to dashboard_url(subdomain: '') do
          %i.fa.fa-th-list
          내 피드
      %li.home-line= link_to '프로필 수정', edit_user_registration_path
      %li.home-line= link_to '로그아웃', destroy_user_session_path, class: 'user-link', method: :delete

      - if current_user.member_issues.only_alive_group(host_group).any?
        %li.group-line
          = link_to root_path do
            #{host_group.title_basic_format}
      - current_user.member_issues.only_alive_group(host_group).each do |issue|
        = render 'issues/issue_line', issue: issue

      - Group.comprehensive_joined_by(current_user).but(host_group).each do |group|
        %li.group-line
          = link_to smart_group_url(group) do
            #{group.title_basic_format}
        - current_user.member_issues.only_alive_group(group).each do |issue|
          = render 'issues/issue_line', issue: issue
      %li{style:"padding-right:20px;"}
        %hr
    %li
      = link_to root_path do
        %div
          %img.footer-logo__img{ alt: 'parti', src: asset_path('parti_logo_footer.png') }
        %span{style:"font-size:12px;color:dimgray;font-weight:bold;line-height:30px;"}
          민주적 일상 커뮤니티 '빠띠'
    %li{style:"padding-right:20px;"}
      %hr
    %li= link_to '빠띠 소개', '/about'
    %li= link_to '이용약관', '/terms'
    %li= link_to '그룹 개설 안내', '/service'
    %li= link_to '개인정보취급정책', '/privacy'
    %li
      %a(href='mailto:help@parti.xyz')
        오류 및 버그 신고
    %li
      = link_to slug_issue_path(slug: Issue::SLUG_OF_PARTI_PARTI) do
        제안 및 의견 &middot; 빠띠만든당
  - if is_kakao_talkable?
    .mobile-list__yellow
      %a{href: 'http://plus.kakao.com/home/@parti_xyz', target: '_blank'}
        = image_tag 'icon_yellow.png', alt: 'btn-yellow'

