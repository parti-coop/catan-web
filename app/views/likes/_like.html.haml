%span(id="#{dom_id(post)}-like")
  - if post.liked_by? current_user
    = link_to cancel_post_likes_path(post), method: :delete, remote: true do
      %i.fa.fa-heart>
  - else
    = link_to post_likes_path(post), method: :post, remote: true do
      %i.fa.fa-heart-o>
  = post.likes.count
  %span.recent_likes(style='position: relative;')
    - recent_likes = post.likes.recent.limit(5).reverse
    - recent_likes.each_with_index do |like, index|
      %span(style="position: absolute; left: #{0.5 * (recent_likes.count - index)}em;")
        = byline(like.user, hide_nickname: true)
