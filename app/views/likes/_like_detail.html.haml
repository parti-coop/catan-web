%span.recent_likes(style='position: relative;')
  - recent_likes = post.likes.recent.limit(5).reverse
  - recent_likes.each_with_index do |like, index|
    %span(style="position: absolute; top: -0.3em; left: #{0.1 + 0.5 * (recent_likes.count - index - 1)}em;")
      = byline(like.user, hide_nickname: true)
