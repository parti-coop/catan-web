= hidden_field_tag :back_url, @list_url || request.original_url
= f.hidden_field :has_poll, value: false
= f.hidden_field :has_survey, value: false
.row
  .col-xs-12
    = f.fields_for :wiki do |ff|
      = ff.text_field :title, placeholder: '제목을 넣어주세요...', class: "form-control", data: { 'rule-required': true }
      %div{ class: (is_air_redactorable? ? "redactor-box-style-wiki" : "redactor-wrapper--toolbar") }
        = ff.text_area :body, placeholder: '내용 ...', class: "form-control collapse redactor validate #{'js-redactor-toolbar' unless is_air_redactorable?} validation-ignore", data: { 'rule-required': true }
