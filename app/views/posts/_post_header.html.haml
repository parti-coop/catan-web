.panel-heading
  .clearfix
    .pull-right
      = link_to issue_home_path(post.issue) do
        %span.label.label-danger.post-card__issue-label
          = image_tag post.issue.logo_url, style: 'width: 12px; height: 12px'
          = post.issue.title

    .pull-left
      %span
        = byline post.user
      %span.text-muted
        %i.fa.fa-clock-o
        = date_f post.created_at
      - if can? :update, post.specific
        = link_to '수정', [:edit, post.specific]
      - if can? :destroy, post.specific
        = link_to '삭제', post.specific, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' }

