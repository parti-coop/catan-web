- has_blinds = false
- @posts.each do |post|
  - unless post.blinded?(current_user)
    = render post, local_assigns.merge(mode: 'list')
  - else
    - has_blinds = true

- if has_blinds
  .post-card-with-comments
    .post-card-with-comments__content
      .post-card-with-comments__header.blind
        = t('labels.blind_info')

