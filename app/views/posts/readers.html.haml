= render 'issues/issue_header', simple: true, issue: @post.issue

%section#post-readers
  .container
    .row
      = main_column_tag do
        %section#content-tab-section
          .nav-tabs.message-tab
            %h4
              게시글을 확인한 가입멤버
              .count-label-wrapper
                .count-label= @post.readers_count
        %ul.user-card-wrapper.list-unstyled.clearfix{data: {last_id: @current_last.try(:id), is_last: @is_last_page.to_s}}
          = render 'members/members_page', members: @readers.map(&:member), issue: @post.issue
        = paginate @readers, theme: 'catan', params: { controller: 'posts', action: 'readers' }
      - unless is_small_screen?
        = render 'issues/aside'
