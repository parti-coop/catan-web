.post-card.summary
  - posts.each do |post|
    .post-card__post
      .read-mark
      .desc
        .issue-meta
          %span.issue-and-group
            %span.issue-title
              = post.issue.title
              = security_icon(post.issue)
            - if post.issue.group != host_group
              \/
              %span.issue-group
                = post.issue.group.title_basic_format
                = security_icon(post.issue.group)

          &nbsp;
          - created_at = post.try(:created_at)
          %span.date= created_at.nil? ? '지금' : date_f(created_at)
        - if !post.blinded?(current_user)
          = link_to smart_post_path_or_url(post) do
            = post.specific_desc_striped_tags(120)
        - else
          .text-muted= t('labels.post_blind_info')
      - if !post.blinded?(current_user)
        .media-right
          - if post.survey.present?
            .label.label-default
              설문
          - elsif post.poll.present?
            .label.label-default
              찬반
