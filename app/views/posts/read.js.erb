setTimeout(function() {
  var $item = $("<%= pinned_post_dom_selector(@post) %>");
  $item.find('.js-read-action-btn').hidden();
  $item.removeClass('need-to-read')
}, 100);

var completed = $('<%= read_button_dom_selector(@post) %>').data('completed-with');
$('<%= read_button_dom_selector(@post) %>').data('ujs:enable-with', completed)
$('<%= read_button_dom_selector(@post) %>').data('disable-with', completed);
$('<%= read_button_dom_selector(@post) %>').html(completed);
setTimeout(function() {
  $.rails.disableElement($('<%= read_button_dom_selector(@post) %>'));
}, 100);
$('<%= read_button_dom_selector(@post) %>').css('cursor', 'default');

UnobtrusiveFlash.showFlashMessage("<%= t('views.read') %>", {type: 'notice'});
