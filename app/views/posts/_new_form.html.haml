- if user_signed_in?
  #post-form-widget.form-widget-container
    = form_for Post.new, html: { class: 'form-widget', novalidate: true, data: {action: 'parti-form-validation', 'submit-form-control': '#post-form-widget form input[type=submit]' } } do |f|
      .form-widget-content
        .user-info
          = render 'users/post_byline', user: current_user
        = hidden_field_tag :back_url, @list_url || request.original_url
        = f.hidden_field :reference_type
        = f.hidden_field :has_poll, value: false
        = f.hidden_field :has_survey, value: false

        .form-group.textarea-box
          = f.text_area :body, placeholder: '내용 ...', class: "form-control #{'redactor validate' if  is_redactorable?} validation-ignore", data: { 'rule-required': true }
          = f.hidden_field :is_html_body, value: is_redactorable? ? true : false

          - cancel_btn_data = {action: 'parti-post-cancel-subform', 'reference-type-field': '#post_reference_type', 'show-target': '.post-reference-btns', 'has-poll': '#post_has_poll', 'has-survey': '#post_has_survey'}
          .post-link-field.hidden
            = f.fields_for :reference, LinkSource.new do |ff|
              .form-group
                .input-group
                  = ff.text_field :url, placeholder: 'http://로 시작하는 주소를 입력하세요', class: 'form-control', data: { 'rule-required': true }
                  .input-group-addon.cursor-pointer{ data: cancel_btn_data.merge('reference-field': '.post-link-field') }
                    취소

          .post-file-field.hidden
            = f.fields_for :reference, FileSource.new do |ff|
              .form-group
                .input-group
                  = ff.file_field :attachment, class: 'form-control', data: { 'rule-required': true }
                  .input-group-addon.cursor-pointer{ data: cancel_btn_data.merge('reference-field': '.post-file-field') }
                    취소

          .post-poll-field.hidden
            = f.fields_for :poll, Poll.new do |ff|
              .form-group
                .input-group
                  = ff.text_field :title, class: 'form-control', placeholder: '찬반투표 제목: ex. 탕수육소스는 찍어먹어야합니다', data: { 'rule-required': true }
                  .input-group-addon.cursor-pointer{ data: cancel_btn_data.merge('reference-field': '.post-poll-field') }
                    취소
          .post-survey-field.hidden
            = f.fields_for :survey, Survey.new do |ff|
              .help-block
                선택 항목을 넣어주세요.
                %a.btn.btn-default.btn-xs{href: '#', data: cancel_btn_data.merge('reference-field': '.post-survey-field') } 취소
              - 2.times do
                .form-group
                  = ff.fields_for :options, Option.new do |fff|
                    = render 'posts/option_fields', f: fff, static: true, input_data: { placeholder: '* 필수입력: ex. 짜장면', 'data-rule-required': true }
              .new-form-group
                = link_to_add_association '+ 선택항목 추가', ff, :options, partial: 'posts/option_fields', render_options: { locals: { input_data: { placeholder: 'ex. 짬뽕' } } }

      .form-widget-btns.clearfix
        .post-reference-btns
          - open_btn_data = {action: 'parti-post-select-subform', 'hidden-target': '.post-reference-btns', 'reference-type-field': '#post_reference_type', 'has-poll': '#post_has_poll', 'has-survey': '#post_has_survey'}
          %button{ class: 'btn btn-xs btn-link editor-btn post-link-btn', data: open_btn_data.merge('reference-field': '.post-link-field') }
            %i.fa.fa-link
            = t('labels.new_post_link_source_button')
          %button{ class: 'btn btn-xs btn-link editor-btn post-file-btn', data: open_btn_data.merge('reference-field': '.post-file-field') }
            %i.fa.fa-floppy-o
            = t('labels.new_post_file_source_button')
          %button{ class: 'btn btn-xs btn-link editor-btn post-poll-btn', data: open_btn_data.merge('reference-field': '.post-poll-field') }
            %i.fa.fa-fire
            = t('labels.new_post_poll_button')
          %button{ class: 'btn btn-xs btn-link editor-btn post-survey-btn', data: open_btn_data.merge('reference-field': '.post-survey-field') }
            %i.fa.fa-list-ul
            = t('labels.new_post_survey_button')
        .submit-box
          = f.hidden_field :issue_id, data:{ 'rule-required': true }, class: 'validate', value: (issue.id if issue.present?)
          = f.submit '게시', class: 'btn btn-primary btn-ghost btn-border', data: { disable_with: "게시 중..." }

