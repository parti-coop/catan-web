- if user_signed_in?
  #post-form-widget.form-widget-container
    = form_for Post.new, html: { class: 'form-widget', novalidate: true, data: {action: 'parti-form-validation', 'submit-form-control': '#post-form-widget form input[type=submit]' } } do |f|
      .form-widget-content
        .user-info
          = render 'users/post_byline', user: current_user
        = hidden_field_tag :back_url, @list_url || request.original_url
        = f.hidden_field :reference_type
        = f.hidden_field :has_poll, value: false

        .form-group.textarea-box
          = f.text_area :body, placeholder: '내용 ...', class: "form-control #{'redactor validate' if  is_redactorable?} validation-ignore", data: { 'rule-required': true }
          .post-link-field.hidden
            = f.fields_for :reference, LinkSource.new do |ff|
              .form-group
                .input-group
                  = ff.text_field :url, placeholder: 'http://로 시작하는 주소를 입력하세요', class: 'form-control'
                  .input-group-addon.cursor-pointer{data: { action: 'parti-post-cancel-reference-or-poll', 'reference-type-field': '#post_reference_type', 'reference-field': '.post-link-field', 'show-target': '.post-reference-btns','has-poll': '#post_has_poll' }}
                    취소

          .post-file-field.hidden
            = f.fields_for :reference, FileSource.new do |ff|
              .form-group
                .input-group
                  = ff.file_field :attachment, class: 'form-control'
                  .input-group-addon.cursor-pointer{data: { action: 'parti-post-cancel-reference-or-poll', 'reference-type-field': '#post_reference_type', 'reference-field': '.post-file-field', 'show-target': '.post-reference-btns','has-poll': '#post_has_poll' }}
                    취소

          .post-poll-field.hidden
            = f.fields_for :poll, Poll.new do |ff|
              .form-group
                .input-group
                  = ff.text_field :title, class: 'form-control', placeholder: '찬반토론 제목: ex. 탕수육소스는 찍어먹어야합니다'
                  .input-group-addon.cursor-pointer{data: { action: 'parti-post-cancel-reference-or-poll', 'reference-type-field': '#post_reference_type', 'reference-field': '.post-poll-field', 'show-target': '.post-reference-btns', 'has-poll': '#post_has_poll' }}
                    취소

      .form-widget-btns.clearfix
        .post-reference-btns
          %button{class: 'btn btn-xs btn-link editor-btn post-link-btn', data: { action: 'parti-post-select-reference-or-poll', 'hidden-target': '.post-reference-btns', 'reference-type-field': '#post_reference_type','has-poll': '#post_has_poll', 'reference-field': '.post-link-field'}}
            %i.fa.fa-link
            = t('labels.new_post_link_source_button')
          %button{class: 'btn btn-xs btn-link editor-btn post-file-btn', data: { action: 'parti-post-select-reference-or-poll', 'hidden-target': '.post-reference-btns', 'reference-type-field': '#post_reference_type','has-poll': '#post_has_poll', 'reference-field': '.post-file-field'}}
            %i.fa.fa-floppy-o
            = t('labels.new_post_file_source_button')
          %button{class: 'btn btn-xs btn-link editor-btn post-poll-btn', data: { action: 'parti-post-select-reference-or-poll', 'hidden-target': '.post-reference-btns', 'reference-type-field': '#post_reference_type', 'has-poll': '#post_has_poll','reference-field': '.post-poll-field'}}
            %i.fa.fa-fire
            찬반토론
        .submit-box
          = f.hidden_field :issue_id, data:{ 'rule-required': true}, class: 'validate', value: (issue.id if issue.present?)
          = f.submit '게시', class: 'btn btn-primary btn-ghost btn-border', data: { disable_with: "게시 중..." }

