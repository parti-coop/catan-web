- selected_parti = nil
.parti-select
  %select.js-parti-editor-selector.collapse(data-live-search="true" data-width="100%" title="게시할 빠띠를 골라 주세요")
    - all_issues = current_user.member_issues.alive.sort_by_name.to_a
    - current_user.member_groups.sort_by_name.each do |group|
      - issues = all_issues.select { |issue| issue.group_slug == group.slug }
      - if issues.any?
        %optgroup{label: group.title_basic_format}
          - issues.each do |issue|
            - selected_parti = issue if selected_parti.blank?
            - issue_content = capture do
              .parti-option
                .parti-thumb{ style: "background-image: url(#{issue.logo.sm.url});" }
                %span.issue-line__title
                  = issue.title
                  = meta_icons(issue)
            %option{value: issue.id, 'data-content': issue_content}
              = issue.title
              = meta_icons(issue)
