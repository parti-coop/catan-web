- post = discussion.acting_as
.post-inline.discussion-inline[post]
  .post-inline__title
    - if post.hot?
      %i.wi.wi-fire.text-danger
    = link_to discussion do
      #{discussion.title}
    %small
      %span.text-primary
        = post.comments_count
      %i.wi.wi-fire
      %span.text-primary
        = post.likes.count

  %p.post-inline__body
    - first_proposal = discussion.proposals.sort_by_agree_count.first
    - if first_proposal
      %i.fa.fa-level-up.fa-rotate-90.text-muted
      &nbsp;
      = truncate_html(striped_smart_format(first_proposal.body, nil, wrapper_tag: 'span'), length: 70, word_boundary: false)
    - else
      %i.fa.fa-level-up.fa-rotate-90.text-muted
      %i.text-muted
        아직 제안이 없습니다

  .post-inline__footer
    = render 'posts/post_inline_footer', obj: discussion, show_issue: local_assigns[:show_issue]
