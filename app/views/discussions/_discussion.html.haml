- post = discussion.acting_as
.post-inline.discussion-inline[post]
  .media
    .post-like.media-left
      = render 'likes/like_inline', post: post
    .post-icon.media-left.valign.text-center
      %i.fa.fa-hand-paper-o.fa-fw
    .media-body
      .hidden-xs.pull-right
        .post-inline__buttons__shares{ data: { provider: 'parti-issue-share', share: { url: polymorphic_url(post.specific), text: post.specific.title} }}

      %h5.post-inline__title
        - if post.hot?
          %i.wi.wi-fire.text-danger
        = link_to discussion, target: 'parti_detail_view' do
          #{discussion.title}

      %p.post-inline__body
        - first_proposal = discussion.proposals.sort_by_agree_count.first
        - if first_proposal
          = truncate_html(striped_smart_format(first_proposal.body), length: 70, word_boundary: false)
        - else
          %i.text-muted
            아직 제안이 없습니다

      = render 'posts/post_inline_footer', obj: discussion, show_issue: local_assigns[:show_issue]
