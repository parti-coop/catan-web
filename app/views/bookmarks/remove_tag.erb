<% if @bookmark.errors.any? %>
UnobtrusiveFlash.showFlashMessage("<%= t('errors.messages.unknown') %>", {type: 'error'});
<% else %>
var $bookmarked_post = $('<%= bookmarked_post_dom_selector(@bookmark.post) %>');
var $bookmark_tags = $('<%= bookmark_tags_post_dom_selector(@bookmark.post) %>');

var $new_bookmarked_post = $('<%= j render('posts/post_bookmarked', post: @bookmark.post) %>');
$bookmarked_post.replaceWith($new_bookmarked_post);
parti_partial$($new_bookmarked_post);

var $new_bookmark_tags = $('<%= j(render 'bookmarks/bookmark_tags', bookmark: @bookmark) %>');
$bookmark_tags.replaceWith($new_bookmark_tags);
parti_partial$($new_bookmark_tags);
<% end %>