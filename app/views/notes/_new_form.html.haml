- issue ||= @issue
- if user_signed_in? and issue.postable?(current_user)
  #note-form-widget.form-widget-container.bg-line
    = form_for Note.new, html: { class: 'note-form form-widget', novalidate: true, data: {action: 'parti-form-validation', 'submit-form-control': '#note-form-widget form input[type=submit]' } } do |f|
      = hidden_field_tag :back_url, @list_url || request.original_url

      .form-group
        = f.text_area :body, rows: local_assigns[:body_rows_count] || 8, placeholder: '힘이 되는 한마디를 남겨주세요', class: 'form-control input-lg', data: {ride: 'parti-autoresize', 'rule-required': true, 'rule-maxlength': Note::MAX_BODY_LENGTH}

      .form-group.clearfix
        .submit-box.text-right{data: {action: 'parti-show-after-focused', 'focus-target': '#note-form-widget #note_body'}}
          = f.hidden_field :issue_id, value: issue.id
          = f.submit '게시', class: 'btn btn-primary btn-ghost btn-border', data: { disable_with: "게시 중..." }

